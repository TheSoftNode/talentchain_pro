# Environment Configuration
NODE_ENV=development

# Solana Network Configuration
RPC_URL=http://127.0.0.1:8899
CLUSTER=localnet
COMMITMENT=confirmed

# Program Keys (Generated during setup)
SKILL_TOKEN_PROGRAM_ID=
TALENT_POOL_PROGRAM_ID=
REPUTATION_ORACLE_PROGRAM_ID=
GOVERNANCE_PROGRAM_ID=

# Deployment Configuration
PAYER_KEYPAIR_PATH=./keys/payer.key
PROGRAM_KEYPAIR_PATH=./keys/program.key

# Test Configuration
TEST_TIMEOUT=60000
SKIP_INTEGRATION_TESTS=false

# Logging
LOG_LEVEL=info
VERBOSE=false

# Contract Specific Settings
DEFAULT_SPACE=8192
SKILL_TOKEN_SPACE=2048
TALENT_POOL_SPACE=4096
REPUTATION_ORACLE_SPACE=3072
GOVERNANCE_SPACE=4096

# Solana Configuration
SOLANA_CLI_CONFIG=~/.config/solana/cli/config.yml
ANCHOR_WALLET=./keys/payer.key

# Development Settings
AIRDROP_AMOUNT=100
CONFIRMATION_TIMEOUT=60000
