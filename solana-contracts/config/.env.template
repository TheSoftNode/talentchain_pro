# Solana Network Configuration

# Default network for operations
SOLANA_NETWORK=devnet

# Network RPC URLs
LOCALHOST_RPC_URL=http://127.0.0.1:8899
DEVNET_RPC_URL=https://api.devnet.solana.com
TESTNET_RPC_URL=https://api.testnet.solana.com
MAINNET_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet Configuration
PAYER_KEYPAIR_PATH=./keys/deployer.json
PROGRAM_KEYPAIR_PATH=./keys/program.json

# Deployment Settings
COMPUTE_UNIT_PRICE=1
COMPUTE_UNIT_LIMIT=200000
CONFIRMATION_TIMEOUT=60000
SKIP_PREFLIGHT=false

# Program Configuration
SKILL_TOKEN_PROGRAM_ID=
TALENT_POOL_PROGRAM_ID=
REPUTATION_ORACLE_PROGRAM_ID=
GOVERNANCE_PROGRAM_ID=

# API Keys (Optional)
SOLSCAN_API_KEY=
ANCHOR_WALLET=

# Development Settings
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_PROFILING=false

# Testing Configuration
TEST_NETWORK=localhost
TEST_TIMEOUT=30000
TEST_RETRIES=3

# Build Configuration
BUILD_OPTIMIZATION=true
EMIT_ABI=true
EMIT_METADATA=true
CLEAN_BUILD=true
